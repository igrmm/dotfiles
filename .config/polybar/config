; Dracula
[colors]
dark = #21222c
purple = #bd93f9
light = #f8f8f2
alert = #bd2c40

[bar/bar]
line-size = 1
height = 18
background = ${colors.dark}
foreground = ${colors.light}
padding-right = 1
module-margin-right = 1
font-0 = "monospace:size=12;2"
font-1 = "FontAwesome:size=12;2"
modules-left = bspwm xwindow
modules-right = date
tray-position = right
tray-padding = 2
tray-maxsize = 24
dpi =
wm-restack = bspwm
enable-ipc = true
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/bspwm]
type = internal/bspwm
label-focused = %index%
label-focused-background = ${colors.purple}
label-focused-foreground = ${colors.dark}
label-focused-padding = 1
label-occupied = %index%
;label-occupied-underline = ${colors.light}
label-occupied-padding = 1
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
label-empty =
;label-empty = %index%
label-empty-foreground = ${colors.light}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow

[module/date]
type = custom/script
interval = 5
exec = date '+%H:%M'
format-prefix = "ï€— "

[settings]
screenchange-reload = true

